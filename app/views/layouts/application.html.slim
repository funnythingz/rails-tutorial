doctype html
html
  head
    title Rails Tutorial | #{@title}

    link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
    link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"

    script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  body

    nav class="navbar navbar-default" role="navigation"
      .container
        .navbar-header
          button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          = link_to "Home", {:controller => "static_pages", :action => "home"}, {:class => "navbar-brand"}

        #bs-example-navbar-collapse-1 class="collapse navbar-collapse"
          ul class="nav navbar-nav"
            li = link_to "About me", :controller => "static_pages", :action => "about"

          ul class="nav navbar-nav navbar-right"
            li = link_to "Help", :controller => "static_pages", :action => "help"

    = yield
